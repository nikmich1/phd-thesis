%(H_{\rm{nr}})_{fd} = \langle N^*I_{\rm{f}}M_{\rm{f}} | -\frac{1}{c}\int d^3r_{\rm{n}}\bm{j}_{\rm{n}}(\bm{r}_{\rm{n}})\cdot\bm{A}_{\lambda k LM}(\bm{r}_{\rm{n}}) | N^*I_{\rm{d}}M_{\rm{d}} \rangle  \ .
%\label{Rrate}
%\end{equation}


%\begin{equation}
%A_{\rm{r}}^{d \to f} = \frac{8\pi (L+1)}{L[(2L+1)!!]^2} \left(\frac{E_{\rm{n}}}{c}\right)^{2L+1} \mathcal{B} (\lambda L, I_{\rm{f}} \to I_{\rm{d}})  \ .
%\end{equation}


%\begin{equation}
%\mathcal{B} (\lambda L, I_{\rm{f}} \to Id) = \frac{2I_{\rm{f}}+1}{2I_{\rm{d}}+1}  \mathcal{B} (\lambda L, I_{\rm{d}} \to I_{\rm{f}}) \ .
%\end{equation}






