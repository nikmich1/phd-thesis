\subsubsection{\Large  The macroscopic nuclear current density $\boldsymbol{\mathcal{J}}$}





In order to obtain the form of the wave equation given in Eq.~\eqref{eq:NFS_wave-eq-general}, the macroscopic nuclear current density [Eq.~\eqref{eq:NFS_macro-current}]
%
\begin{equation}
\boldsymbol{\mathcal{J}}(\bm{r},t) = \int \frac{\d^3\bm{k}'}{(2 \pi)^3} \e^{\i \bm{k}' \bm{r}} \sum_{\alpha} \mem{\psi_{\alpha}(t)}{\bm{j}(\bm{k}')}{\psi_{\alpha}(t)} \e^{-\i \bm{k}' \bm{r}_{\alpha}}
\end{equation}
%
needs to be expressed in terms of the nuclear transition currents $\bm{J}^*_{\ell}$ and $\bm{J}_{\ell}$ [Eqs.~\eqref{eq:NFS_nucl-current}]. The first step is to calculate the matrix element of an individual nucleus given in Eq.~\eqref{eq:NFS_macro-current-me}, which can be rewritten in the following form
%
\begin{align}
&\mem{\psi_{\alpha}(t)}{\bm{j}(\bm{k})}{\psi_{\alpha}(t)} \nonumber \\
&\qquad
= \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty) \bm{j}(\bm{k}) U(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad
= \sum_{M _{\rm{g}}', M _{\rm{e}}} \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}'} \mem{I _{\rm{g}} M _{\rm{g}}'}{\bm{j}(\bm{k})}{I _{\rm{e}} M _{\rm{e}}} \mem{I _{\rm{e}} M _{\rm{e}}}{U(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}} \ .
\label{eq:App-NFS-current-1}
\end{align}
%
Here, it was assumed that the system is in \ket{I _{\rm{g}} M _{\rm{g}}} at $t=-\infty$. Applying perturbation theory the matrix element \me{I _{\rm{e}} M _{\rm{e}}}{U(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}} involving a transition from the ground to the excited state can be calculated. Taking into account only the first non-vanishing order leads to
%
\begin{align}
&\mem{I _{\rm{e}} M _{\rm{e}}}{U(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad
= -\i \int_{-\infty}^{t} \d t' \, \sum_{M _{\rm{g}}'', M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}}{U(t,t')}{I _{\rm{e}} M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}'}{H_{\gamma}(t')}{I _{\rm{g}} M _{\rm{g}}''} \nonumber \\
&\qquad \qquad \times
\mem{I _{\rm{g}} M _{\rm{g}}''}{U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad
= -\i \int_{-\infty}^{t} \d t' \, \sum_{M _{\rm{g}}'', M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}}{U(t,t')}{I _{\rm{e}} M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}'}{\frac{\i}{\omega} \bm{j}^{\dagger}(\bm{k}) \bm{E}(y_{\alpha},t') \e^{\i(\bm{k} \bm{r}_{\alpha} - \omega t')}}{I _{\rm{g}} M _{\rm{g}}''} \nonumber \\
& \qquad \qquad  \times
 \mem{I _{\rm{g}} M _{\rm{g}}''}{U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad
= \frac{1}{\omega} \int_{-\infty}^{t} \d t' \, \sum_{M _{\rm{g}}'', M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}}{U(t,t')}{I _{\rm{e}} M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}'}{\bm{j}^{\dagger}(\bm{k})}{I _{\rm{g}} M _{\rm{g}}''}  \bm{E}(y_{\alpha},t') \e^{\i(\bm{k} \bm{r}_{\alpha} - \omega t')} \nonumber \\
&\qquad \qquad \times
\mem{I _{\rm{g}} M _{\rm{g}}''}{U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \ .
\label{eq:App-NFS-current-2}
\end{align}
%
In the step from the first to the second equal sign, the explicit form of $H_{\gamma}$ given in Eq.~\eqref{eq:NFS_Hamiltonian-gamma} has been inserted. Plugging Eq.~\eqref{eq:App-NFS-current-2} into Eq.~\eqref{eq:App-NFS-current-1}, we obtain
%
\begin{align}
&\mem{\psi_{\alpha}(t)}{\bm{j}(\bm{k})}{\psi_{\alpha}(t)} \nonumber \\
&\qquad 
= \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}'} \mem{I _{\rm{g}} M _{\rm{g}}'}{\bm{j}(\bm{k})}{I _{\rm{e}} M _{\rm{e}}'} \int_{-\infty}^t \d t' \mem{I _{\rm{e}} M _{\rm{e}}'}{U(t,t')}{I _{\rm{e}} M _{\rm{e}}} \nonumber \\
&\qquad\qquad  \times
 \mem{I _{\rm{e}} M _{\rm{e}}}{H_{\gamma}(t')}{I _{\rm{g}} M _{\rm{g}}''} \mem{I _{\rm{g}} M _{\rm{g}}''}{U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad
= \frac{1}{\omega} \sum_{M _{\rm{g}}', M _{\rm{e}}} \sum_{M _{\rm{g}}'', M _{\rm{e}}'} \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty)}{I _{\rm{g}} M _{\rm{g}}'} \mem{I _{\rm{g}} M _{\rm{g}}'}{\bm{j}(\bm{k})}{I _{\rm{e}} M _{\rm{e}}} \int_{-\infty}^{t} \d t' \,  \nonumber  \\
&\qquad\qquad \times
\mem{I _{\rm{e}} M _{\rm{e}}}{U(t,t')}{I _{\rm{e}} M _{\rm{e}}'} \mem{I _{\rm{e}} M _{\rm{e}}'}{\bm{j}^{\dagger}(\bm{k})}{I _{\rm{g}} M _{\rm{g}}''} \mem{I _{\rm{g}} M _{\rm{g}}''}{U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&\qquad\qquad \times
\bm{E}(y_{\alpha},t') \e^{\i(\bm{k} \bm{r}_{\alpha} - \omega t')} \nonumber \\
&\qquad
= \frac{1}{\omega} \sum_{M _{\rm{e}}} \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty) \bm{j}(\bm{k}) U(t,-\infty)}{I _{\rm{e}} M _{\rm{e}}} \int_{-\infty}^{t} \d t' \, \bm{E}(y_{\alpha},t') \e^{\i(\bm{k} \bm{r}_{\alpha} - \omega t')} \nonumber \\
&\qquad\qquad \times
\mem{I _{\rm{e}} M _{\rm{e}}}{U^{\dagger}(t',-\infty) \bm{j}^{\dagger}(\bm{k}) U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \ ,
\label{eq:App-NFS-current-3}
\end{align}
%
where in the last step the following property of the time evolution operator has been employed
%
\begin{equation}
U(t,t') = U(t,-\infty) U^{\dagger}(t',-\infty)\ .
\end{equation}
%
Using the final result of Eq.~\ref{eq:App-NFS-current-3}, the macroscopic nuclear current density [Eq.~\eqref{eq:NFS_macro-current}] evaluates to
%
\begin{align}
\boldsymbol{\mathcal{J}}(\bm{r},t) 
%&= \int \frac{\d^3\bm{k}'}{(2 \pi)^3} \e^{\i \bm{k}' \bm{r}} \sum_{\alpha} \mem{\psi_{\alpha}(t)}{\bm{j}(\bm{k}')}{\psi_{\alpha}(t)} \e^{-\i \bm{k}' \bm{r}_{\alpha}} \nonumber \\
&=  \int \frac{\d^3\bm{k}'}{(2 \pi)^3} \e^{\i \bm{k}' \bm{r}} \sum_{\alpha}  \frac{\e^{\i (\bm{k}-\bm{k}') \bm{r}_{\alpha}}}{(2 I_{\rm{g}}+1) \omega}
\sum_{M _{\rm{g}},M _{\rm{e}}} \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty) \bm{j}(\bm{k}) U(t,-\infty)}{I _{\rm{e}} M _{\rm{e}}}  \nonumber \\
&\qquad \times
\int_{-\infty}^{t} \d t' \, \bm{E}(y_{\alpha},t') \e^{-\i \omega t'} \mem{I _{\rm{e}} M _{\rm{e}}}{U^{\dagger}(t',-\infty) \bm{j}^{\dagger}(\bm{k}) U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&=  \int \frac{\d^3\bm{k}'}{(2 \pi)^3} \e^{\i \bm{k}' \bm{r}}  \frac{(2 \pi)^3 n_0 \delta(\bm{k} - \bm{k}')}{(2 I_{\rm{g}}+1) \omega}
\sum_{M _{\rm{g}},M _{\rm{e}}} \mem{I _{\rm{g}} M _{\rm{g}}}{U^{\dagger}(t,-\infty) \bm{j}(\bm{k}) U(t,-\infty)}{I _{\rm{e}} M _{\rm{e}}}  \nonumber \\
&\qquad \times
\int_{-\infty}^{t} \d t' \, \bm{E}(y,t') \e^{-\i \omega t'} \mem{I _{\rm{e}} M _{\rm{e}}}{U^{\dagger}(t',-\infty) \bm{j}^{\dagger}(\bm{k}) U(t',-\infty)}{I _{\rm{g}} M _{\rm{g}}} \nonumber \\
&= \frac{n_0}{(2 I_{\rm{g}}+1) \omega}  \e^{\i \bm{k} \bm{r}}  
\sum_{M _{\rm{g}},M _{\rm{e}}} \mem{\psi_{I _{\rm{g}} M _{\rm{g}}}(t)}{\bm{j}(\bm{k})}{\psi_{I _{\rm{e}} M _{\rm{e}}}(t)} 
\int_{-\infty}^{t} \d t' \, \bm{E}(y,t') \e^{-\i \omega t'} \nonumber \\
&\qquad \times
 \mem{\psi_{I _{\rm{e}} M _{\rm{e}}}(t')}{\bm{j}^{\dagger}(\bm{k})}{\psi_{I _{\rm{g}} M _{\rm{g}}}(t')} \nonumber \\
&= \frac{n_0}{(2 I_{\rm{g}}+1) \omega}\,  \e^{\i (\bm{k} \bm{r} - \omega t)}  
\sum_{\ell} \bm{J}_{\ell}(\bm{k},t)
\int_{-\infty}^{t} \d t' \, \bm{J}_{\ell}^{*}(\bm{k},t') \bm{E}(y,t') \ .
\label{eq:App-NFS-current-4}
\end{align}
%
In the last step of this calculation, the definitions of the nuclear transition currents $\bm{J}^*_{\ell}$ and $\bm{J}_{\ell}$ given in Eqs.~\eqref{eq:NFS_nucl-current} has been used. Moreover, we averaged over the projection quantum number $M_{\rm{g}}$ of the initial state \ket{I_{\rm{g}} M_{\rm{g}}}. Inserting the final result of equation \eqref{eq:App-NFS-current-4} into the original wave equation \eqref{eq:NFS_Maxwell-slowly} of the slowly-varying amplitudes, we obtain 
\begin{align}
\frac{\partial}{\partial y} \bm{E}(y,t) &=
-\frac{2\pi}{c}\, \frac{n_0}{(2 I_{\rm{g}}+1) \omega}\,   
\sum_{\ell} \bm{J}_{\ell}(\bm{k},t)
\int_{-\infty}^{t} \d t' \, \bm{J}_{\ell}^{*}(\bm{k},t') \bm{E}(y,t') \nonumber \\
&=
-\sum_{\ell} \underbrace{\frac{2\pi n_0}{(2 I_{\rm{g}}+1) k c^2}}_{=K_{\ell}}\,   
 \bm{J}_{\ell}(\bm{k},t)
\int_{-\infty}^{t} \d t' \, \bm{J}_{\ell}^{*}(\bm{k},t') \bm{E}(y,t')
\end{align}
%
where the last line coincides with Eq.~\eqref{eq:NFS_wave-eq-general}. 
%The coefficient $K_{\ell}$ is defined in Eq.~\eqref{eq:NFS_Kl}. 
Since we neglected thermal vibrations of the nuclei, the Lamb-M\"ossbauer factor $f_{\rm{LM}}$ has been assumed to be one in our derivation. It can be simply taken into account by scaling $K_{\ell}$ with $f_{\rm{LM}}$, as it was done in the definition given in in Eq.~\eqref{eq:NFS_Kl}.


% -----------------------------------------------------------------------------------------------------%

\subsubsection{\Large Wave equation for $\bm{E}^{(p)}(\xi,\tau)$ [Eq.~\eqref{eq:NFS_wave-eq-scattering-ampl}]}


In order to derive the wave equation for the individual scattering orders $p$, the power series given by Eq.~\eqref{eq:NFS_scattering-ampl} is inserted into Eq.~\eqref{eq:NFS_wave-eq-dimensionless},
%
\begin{equation}
\frac{\partial}{\partial \xi} \sum_{p=0}^{\infty} \bm{E}^{(p)}(\xi,\tau) = -\sum_{\ell} \bm{J}_{\ell}(\bm{k},\tau) \int_{-\infty}^{\tau} \d\tau' \bm{J}_{\ell}^{*}(\bm{k},\tau') \cdot  \sum_{p=0}^{\infty} \bm{E}^{(p)}(\xi,\tau)\ .
\label{eq:App-NFS-wave1}
\end{equation}
%
For the left-hand side of this equation, the derivative of $\bm{E}^{(p)}(\xi,\tau)$ with respect to $\xi$ evaluates to
%
\begin{equation}
\frac{\partial}{\partial \xi} \bm{E}^{(p)}(\xi,\tau) = \frac{\partial}{\partial \xi} \frac{(-\xi)^{p}}{p!} \bm{E}^{(p)}(\tau) =
- \sum_{p=0}^{\infty} \frac{(-\xi)^{p-1}}{(p-1)!} \bm{E}^{(p)}(\tau) \sim \mathcal{O}(\xi^{p-1})\ ,
\end{equation}
%
which is of the order $\mathcal{O}(\xi^{p-1})$. On the other hand, the $p^{\rm{th}}$ scattering order occuring on the right-hand side in Eq.~\ref{eq:App-NFS-wave1} is proportional to $\xi^{p}$,
%
\begin{equation}
\bm{E}^{(p)}(\xi,\tau) = \sum_{p=0}^{\infty} \frac{(-\xi)^{p}}{p!} \bm{E}^{(p)}(\tau) \sim \mathcal{O}(\xi^{p})\ .
\end{equation}
%
Performing a power matching in $\xi$ one can recognize that $\frac{\partial}{\partial \xi} \bm{E}^{(p)}(\xi,\tau)$ needs to be determined by $\bm{E}^{(p-1)}(\xi,\tau)$, finally leading to Eq.~\eqref{eq:NFS_wave-eq-scattering-ampl},
%
\begin{equation}
\frac{\partial}{\partial \xi} \bm{E}^{(p)}(\xi,\tau) = -\sum_{\ell} \bm{J}_{\ell}(\bm{k},\tau) \int_{-\infty}^{\tau} \d\tau' \bm{J}_{\ell}^{*}(\bm{k},\tau') \cdot \bm{E}^{(p-1)}(\xi,\tau')\ .
\end{equation}



