\subsubsection{\Large  NEEC matrix element: magnetic transitions}

In the case of magnetic transitions of fixed multipolarity $L$, the NEEC matrix element [Eq.~\eqref{eq:aA1}] can be written as
%
\begin{align}
\langle \Psi_{\rm{d}} |\mathcalboondox{h}_{\rm{magn}}| \Psi_{\rm{i}}\rangle&=
 4\pi \i\sum_{LM}(-1)^M\sqrt{\frac{L+1}{L}}\frac{1}{2L+1}
\langle  I_{\rm{d}} M_{\rm{d}}|\mathcalboondox{M}_{LM}|I_{\rm{i}} M_{\rm{i}}\rangle 
\sum_{\kappa m}\i^l \e^{\i\Delta_{\kappa}}\sum_{m_l}
Y_{l m_l}^*(\theta_{\bm{p}},\varphi_{\bm{p}})
\nonumber \\
&\qquad
\times
C\big(l\ \frac{1}{2}\ j;m_l\ m_{\rm{s}} \ m\big)
\langle n_{\rm{d}}\kappa_{\rm{d}} m_{\rm{d}}|r_{\rm{e}}^{-(L+1)}\bm{\alpha}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|\varepsilon\kappa m\rangle\ ,
\label{eq:App-neec-mag-0}
\end{align}
%
where $\bm{\alpha}$ can be expressed in terms of the Pauli matrices $\bm{\sigma}=(\sigma_x,\sigma_y,\sigma_z)$,
%
\begin{equation}
\bm{\alpha} = 
\begin{pmatrix}
0 & \bm{\sigma} \\
\bm{\sigma} & 0
\end{pmatrix}\ .
\end{equation}
%
Analogously to the case of electric transitions, the main task in the calculation of Eq.~\eqref{eq:App-neec-mag-0} is to compute the electronic part. Making use of Eqs.~\eqref{cont_wf} and \eqref{bound_wf}, we obtain
%
\begin{align}
& \langle n_{\rm{d}}\kappa_{\rm{d}} m_{\rm{d}}|r_{\rm{e}}^{-(L+1)}\bm{\alpha}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|\varepsilon\kappa m\rangle
\nonumber \\
& \qquad
=  \i \int_0^{\infty}\d r_{\rm{e}}\, r_{\rm{e}}^2 r_{\rm{e}}^{-(L+1)} \Big\{ g_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}}) f_{\varepsilon\kappa}(r_{\rm{e}}) \langle \kappa_{\rm{d}} m_{\rm{d}}|\bm{\sigma}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|-\!\kappa m\rangle 
\nonumber \\
& \qquad\qquad
- f_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}})  g_{\varepsilon\kappa}(r_{\rm{e}}) \langle -\kappa_{\rm{d}} m_{\rm{d}}|\bm{\sigma}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|\kappa m\rangle \Big\} 
\nonumber \\
& \qquad
=  \i J^{(1)}_{L,\kappa_{\rm{d}},\kappa} \langle \kappa_{\rm{d}} m_{\rm{d}}|\bm{\sigma}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|-\!\kappa m\rangle  - \i J^{(2)}_{L,\kappa_{\rm{d}},\kappa} \langle -\kappa_{\rm{d}} m_{\rm{d}}|\bm{\sigma}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|\kappa m\rangle\ ,
\label{eq:App-neec-mag-me-0}
\end{align}
%
where the integrals $J^{(1)}_{L,\kappa_{\rm{d}},\kappa}$ and $J^{(2)}_{L,\kappa_{\rm{d}},\kappa}$ have been introduced. In order to evaluate the occurring matrix elements of the scalar product $\bm{\sigma}\cdot\bm{Y}^{-M}_{LL}$, the spherical composite tensor $T_{JM}(Y_L,\bm{\sigma})$ is introduced,
%
\begin{equation}
T_{JM}(Y_L,\bm{\sigma}) = \bm{\sigma}\cdot\bm{Y}^{M}_{JL}(\theta,\varphi) = \sum_\nu\sum_q C\big(L\ 1\ J;\nu\ q\ M\big)Y_{L\nu}(\theta,\varphi) \left(\bm{\sigma} \cdot \bm{\varepsilon}_q \right)\ .
\end{equation}
%
Applying the Wigner-Eckart theorem, we obtain
%
\begin{align}
\langle \kappa_1 m_1|T_{JM}(Y_L,\bm{\sigma})|\kappa_2 m_2\rangle
=  
\frac{(-1)^{j_2-m_2}}{\sqrt{2 J+1}} C\big(j_1\ j_2\ J;m_1\ -\!m_2\ M\big) \langle \kappa_1\|T_{J}(Y_L,\bm{\sigma})\|\kappa_2\rangle\ ,
\end{align}
%
where the reduced matrix element is determined by \cite{BrinkSatchler}
%
\begin{align}
\langle \kappa_1\|T_{J}(Y_L,\bm{\sigma})\|\kappa_2\rangle
&=  
(-1)^{2J} \left[ (2j_1+1) (2j_2+1) (2J+1) \right]^{1/2} 
 \nonumber \\
& \qquad \times
\begin{Bmatrix}
j_1 & j_2 & J \\
l_1 & l_2 & L \\
1/2 & 1/2 & 1
\end{Bmatrix}
\langle l_1\|Y_L\|l_2\rangle \langle \frac{1}{2}\|\bm{\sigma}\|\frac{1}{2}\rangle\ .
\label{eq:App-rme-TJ}
\end{align}
%
Here, $l_1$ and $l_2$ denote the orbital angular momentum corresponding to $\kappa_1$ and $\kappa_2$, respectively. Furthermore, the Wigner $9j$-symbol \cite{BrinkSatchler} has been used in Eq.~\eqref{eq:App-rme-TJ}. The reduced matrix elements $\langle l_1\|Y_L\|l_2\rangle$ and  $\langle \frac{1}{2}\|\bm{\sigma}\|\frac{1}{2}\rangle$ are given by \cite{BrinkSatchler}
%
\begin{align}
\langle l_1\|Y_L\|l_2\rangle 
=  
(-1)^{L-l_2} \left[ \frac{(2l_1+1)(2l_2+1)(2L+1)}{4\pi} \right]^{1/2} \threejm{L}{l_2}{l_1}{0}{0}{0}
\label{eq:App-rme-YL}
\end{align}
%
and
%
\begin{align}
\langle \frac{1}{2}\|\bm{\sigma}\|\frac{1}{2}\rangle
=  \sqrt{6}\ ,
\label{eq:App-rme-sigma}
\end{align}
%
respectively. Plugging Eqs.~\eqref{eq:App-rme-YL} and \eqref{eq:App-rme-sigma} into Eq.~\eqref{eq:App-rme-TJ} and setting $J=L$, the following form of $\langle \kappa_1\|T_{L}(Y_L,\bm{\sigma})\|\kappa_2\rangle$ can be obtained,
%
\begin{align}
\langle \kappa_1\|T_{L}(Y_L,\bm{\sigma})\|\kappa_2\rangle
&=  
(-1)^{j_2-L+1/2}  \left[ \frac{(2j_1+1) (2j_2+1) (2L+1)}{4\pi L(L+1)} \right]^{1/2} \nonumber \\
&\qquad \times
 (\kappa_2-\kappa_1)
\threejm{j_1}{j_2}{L}{\frac{1}{2}}{-\frac{1}{2}}{0}\ .
\label{eq:App-rme-TJ-final}
\end{align}
%
Here, the condition $l_1 + l_2 + L = \text{``even''}$ has been employed which translates to the parity conservation law of magnetic transitions if used in Eq.~\eqref{eq:App-neec-mag-me-0}: $(-1)^{l} (-1)^{l_{\rm{d}}} = (-1)^{L+1}$. Applying Eq.~\eqref{eq:App-rme-TJ-final} onto the electronic matrix element given in Eq.~\eqref{eq:App-neec-mag-me-0} results in
%
\begin{align}
& \langle n_{\rm{d}}\kappa_{\rm{d}} m_{\rm{d}}|r_{\rm{e}}^{-(L+1)}\bm{\alpha}\cdot\bm{Y}^{-M}_{LL}(\theta_{\rm{e}},\varphi_{\rm{e}})|\varepsilon\kappa m\rangle
\nonumber \\
& \qquad
=  \i (-1)^{j-L+1/2} \left[ \frac{(2j+1) (2L+1)}{4\pi L(L+1)} \right]^{1/2}  C\big(j\ L\ j_{\rm{d}};m\ -\!M\ m_{\rm{d}}\big) \threejm{j_{\rm{d}}}{j}{L}{\frac{1}{2}}{-\frac{1}{2}}{0} \nonumber\\
&\qquad\qquad\times
 (\kappa+\kappa_{\rm{d}}) \underbrace{\left( J^{(1)}_{L,\kappa_{\rm{d}},\kappa} - J^{(2)}_{L,\kappa_{\rm{d}},\kappa} \right)}_{=R^{(\mathcal{M})}_{L,\kappa_{\rm{d}},\kappa}}\ .
\end{align}
%
Inserting this equation into Eq.~\eqref{eq:App-neec-mag-0} and using Eq.~\eqref{eq:me-B_mag-0}, we finally obtain
%
\begin{align}
& \langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}}\kappa_{\rm{d}} m_{\rm{d}}, 0|\mathcalboondox{h}_{\rm{magn}}|I_{\rm{i}}M_{\rm{i}}, \varepsilon\kappa m, 0\rangle
\nonumber \\
& \qquad
= \sum_M (-1)^{I_{\rm{i}}-M_{\rm{i}}+M+j-L-1/2} \left[ \frac{4\pi (2j+1)}{L^2(2L+1)^2}  \right]^{1/2} \langle  I_{\rm{d}}\|\mathcalboondox{M}_{L}\|I_{\rm{i}}\rangle\, (\kappa+\kappa_{\rm{d}})
\nonumber \\
&\qquad\qquad \times
C\big(j\ L\ j_{\rm{d}};m\ -\!M\ m_{\rm{d}}\big)
C\big(I_{\rm{d}}\ I_{\rm{i}}\ L;M_{\rm{d}}\ -\!M_{\rm{i}}\ M\big)
\threejm{j_{\rm{d}}}{j}{L}{\frac{1}{2}}{-\frac{1}{2}}{0}
R^{(\mathcal{M})}_{L,\kappa_{\rm{d}},\kappa}
\end{align}
%
The NEEC transition rate ${Y_{\rm{neec}}^{(\mathcal{M}L)}}$ can be calculated analogously to the case of electric transitions, which leads to
%
\begin{align}
{Y_{\rm{neec}}^{(\mathcal{M}L)}}
%&= \frac{2\pi (2J_{\rm{d}}+1)/(2j_{\rm{d}}+1)}{2(2I_{\rm{i}}+1)(2J_{\rm{i}}+1)}\sum_{ M_{\rm{i}} m_{\rm{s}}} \sum_{M_{\rm{d}} m_{\rm{d}}} 
% \int d\Omega_{\bm{p}} \,
%\big|\langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{magn}}| I_{\rm{i}}M_{\rm{i}}, \bm{p} m_{\rm{s}} ,0 \rangle\big|^2 \rho_{\rm{i}} \nonumber \\
&=
\frac{2\pi(2J_{\rm{d}}+1)}{2(2I_{\rm{i}}+1)(2J_{\rm{i}}+1)(2j_{\rm{d}}+1)} 
\nonumber \\
&\qquad \times
\sum_{ M_{\rm{i}} } \sum_{M_{\rm{d}} m_{\rm{d}}} \sum_{\kappa m} 
\big| \langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{magn}}| I_{\rm{i}}M_{\rm{i}}, \epsilon \kappa m ,0 \rangle \big|^2  \rho_{\rm{i}} \nonumber \\
&=
\frac{4\pi^2\rho_{\rm{i}}}{L^2(2L+1)^2} \mathcal{B}(\mathcal{M}L,I_{\rm{i}}\to  I_{\rm{d}}) \frac{2J_{\rm{d}}+1}{2J_{\rm{i}}+1}
\sum_{\kappa}(2j+1)(\kappa_{\rm{d}}+\kappa)^2 
\threejm{j_{\rm{d}}}{j}{L}{\frac{1}{2}}{-\frac{1}{2}}{0}^2
\nonumber \\
&\qquad
\times  \left|R^{(\mathcal{M})}_{L,\kappa_{\rm{d}},\kappa}\right|^2\ .
\end{align}

