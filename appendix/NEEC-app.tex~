
\subsubsection{\Large  NEEC matrix element: electric transitions}


In order to calculate the electric NEEC matric element [Eq.~\eqref{elme1}] for a fixed multipolarity $L$, we first make use of the expansion given in Eq.~\eqref{eq:pwe},
%
\begin{align}
\langle \Psi_{\rm{d}} |\mathcalboondox{h}_{\rm{en}}| \Psi_{\rm{i}}\rangle&= \frac{1}{R_0^{L+2}}\sum_{M}\frac{4\pi}{2L+1}\langle I_{\rm{d}}M_{\rm{d}}|\mathcalboondox{Q}_{LM}|I_{\rm{i}}M_{\rm{i}}\rangle \sum_{\kappa m}\i^l \e^{\i\Delta_{\kappa}}\sum_{m_l}
C\big(l\ \frac{1}{2}\ j;m_l\ m_{\rm{s}} \ m\big)
\nonumber \\ 
&\qquad
\times 
Y_{l m_l}^*(\theta_{\bm{p}},\varphi_{\bm{p}})\, \langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})\int_0^{\infty}dr_{\rm{n}}r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}})| \varepsilon\kappa m \rangle\ .
\label{eq:App-neec-el-0}
\end{align}
%
How to express the nuclear part $\langle I_{\rm{d}}M_{\rm{d}}|\mathcalboondox{Q}_{LM}|I_{\rm{i}}M_{\rm{i}}\rangle$ in terms of reduced transition probablilities has already been discussed in Eqs.~\eqref{eq:me-B_el} and \eqref{eq:B_el}. In order to further evaluate Eq.~\eqref{eq:App-neec-el-0}, the main task is to calculate the electronic contribution which can be written as
%
\begin{align}
&\langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}} | Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})
\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) | \varepsilon\kappa m \rangle \nonumber \\
& \qquad
= \int_0^{\infty}\d r_{\rm{e}}\, r_{\rm{e}}^2 \int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) \Big\{ g_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}}) g_{\varepsilon\kappa}(r_{\rm{e}}) \langle \kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})|\kappa m\rangle  \nonumber \\
& \qquad\qquad 
 + f_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}}) f_{\varepsilon\kappa}(r_{\rm{e}}) \langle -\kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})|-\!\kappa m\rangle \Big\} \nonumber \\
& \qquad
= I^{(1)}_{L,\kappa_{\rm{d}},\kappa} \langle \kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}}) | \kappa m \rangle + I^{(2)}_{L,\kappa_{\rm{d}},\kappa} \langle -\kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}}) | -\!\kappa m \rangle \ .
\label{eq:App-neec-el-me-0}
\end{align}
%
Here, we applied the representations of \ket{\varepsilon\kappa m} and \ket{n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}} given in Eqs.~\eqref{cont_wf} and \eqref{bound_wf}, respectively, and introduced the notations \ket{\kappa m} and \ket{\kappa_{\rm{d}} m_{\rm{d}}} which denote the spin-angular functions $\Omega_{\kappa}^{m}$ and $\Omega_{\kappa_{\rm{d}}}^{m_{\rm{d}}}$, respectively. Furthermore, the occurring integrals have been abbreviated by $I^{(1)}_{L,\kappa_{\rm{d}},\kappa}$ and $I^{(2)}_{L,\kappa_{\rm{d}},\kappa}$. Making use of the Wigner-Eckart theorem and the relation $Y^*_{LM} = (-1)^M Y_{L -\!M}$, the matrix elements $\langle \kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM} | \kappa m \rangle$ and $\langle -\kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM} | -\!\kappa m \rangle$ can be written in the following form
%
\begin{align}
\langle \kappa_1 m_1 | Y^*_{LM} | \kappa_2 m_2 \rangle
= \frac{(-1)^{j_2-m_2+M}}{\sqrt{2 L+1}} C\big(j_1\ j_2\ L;m_1\ -\!m_2\ -\!M\big) \langle \kappa_1  \| Y_{L} \| \kappa_2 \rangle\ .
\label{eq:App-neec-me-YLM}
\end{align}
%
Following Ref.~\cite{BrinkSatchler}, the reduced matrix element occurring in Eq.~\eqref{eq:App-neec-me-YLM} is given by
%
\begin{align}
\langle \kappa_1 \| Y_{L} \| \kappa_2 \rangle &= (-1)^{j_2-1/2+L} \left[ \frac{(2j_1+1) (2j_2+1) (2 L+1)}{4\pi} \right]^{1/2} \threejm{j_1}{j_2}{L}{\frac{1}{2}}{-\frac{1}{2}}{0} \nonumber \\
&= (-1)^{L+2j_1} \left[ \frac{(2j_1+1) (2 L+1)}{4\pi} \right]^{1/2} C\big(j_1\ L\ j_2;\frac{1}{2}\ 0\ \frac{1}{2}\big)\ .
\label{eq:App-neec-rme-YL}
\end{align}
%
Here, we employed the connection between the Wigner $3j$-symbols and the Clebsch-Gordan coefficients given in Eq.~\eqref{Wigner-3j}. Note that we use a slightly different definition of the reduced matrix elements than the one used in Ref.~\cite{BrinkSatchler}.
Inserting Eq.~\eqref{eq:App-neec-rme-YL} into Eq.~\eqref{eq:App-neec-me-YLM} and setting $\kappa_1=\kappa_{\rm{d}}$, $m_1=m_{\rm{d}}$, $\kappa_2=\kappa$ and $m_2=m$, we obtain
%
\begin{align}
\langle \kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM} | \kappa m \rangle
&= (-1)^{j-m+M+L+2j_{\rm{d}}}  \nonumber \\
&\qquad \times
\left(\frac{2j_{\rm{d}}+1}{4\pi}\right)^{1/2} C\big(j_{\rm{d}}\ j\ L;m_{\rm{d}}\ -\!m\ -\!M\big)
C\big(j_{\rm{d}}\ L\ j;\frac{1}{2}\ 0\ \frac{1}{2}\big)\ .
\end{align}
%
It can be easily shown that the same relation holds for $\langle -\kappa_{\rm{d}} m_{\rm{d}} | Y^*_{LM} | -\!\kappa m \rangle$ such that Eq.~\eqref{eq:App-neec-el-me-0} simplifies to
%
\begin{align}
&\langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}} | Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})
\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) | \varepsilon\kappa m \rangle \nonumber \\
& \qquad
= (-1)^{j-m+M+L+2j_{\rm{d}}} \left(\frac{2j_{\rm{d}}+1}{4\pi}\right)^{1/2} C\big(j_{\rm{d}}\ j\ L;m_{\rm{d}}\ -\!m\ -\!M\big) C\big(j_{\rm{d}}\ L\ j;\frac{1}{2}\ 0\ \frac{1}{2}\big)
 \nonumber \\
&\qquad \qquad \times
\underbrace{\left( I^{(1)}_{L,\kappa_{\rm{d}},\kappa}  + I^{(2)}_{L,\kappa_{\rm{d}},\kappa} \right)}_{=R^{(\mathcal{E})}_{L,\kappa_{\rm{d}},\kappa}}\ .
\label{eq:App-neec-el-me-1}
\end{align}
%
Plugging Eq.~\eqref{eq:App-neec-el-me-1} into Eq.~\eqref{eq:App-neec-el-0} and expressing the nuclear part in terms of the reduced matrix elements [Eq.~\eqref{eq:me-B_el}], we obtain the following solution for the NEEC matrix element in the case of electric transitions,
%
\begin{align}
& \langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}, 0 |\mathcalboondox{h}_{\rm{en}}| I_{\rm{i}}M_{\rm{i}}, \varepsilon\kappa m, 0\rangle
\nonumber \\
&\qquad = 
\frac{1}{R_0^{L+2}}\sum_{M} (-1)^{I_{\rm{d}}+M_{\rm{i}}+L+M+m+3j_{\rm{d}}} 
\left[ \frac{4\pi (2j_{\rm{d}}+1)}{(2L+1)^3} \right]^{1/2} 
\langle  I_{\rm{d}}\|\mathcalboondox{Q}_{L}\|I_{\rm{i}}\rangle\,
\nonumber \\ 
&\qquad \qquad \times 
C\big(I_{\rm{i}}\ I_{\rm{d}}\ L;-\!M_{\rm{i}}\ M_{\rm{d}}\ M\big) 
 C\big(j\ j_{\rm{d}}\ L;-\!m\ m_{\rm{d}}\ -\!M\big) C\big(j_{\rm{d}}\ L\ j;\frac{1}{2}\ 0\ \frac{1}{2}\big)\, R^{(\mathcal{E})}_{L,\kappa_{\rm{d}},\kappa} \ .
\label{eq:App-neec-el-1}
\end{align}
%
This solution can be used to derive the NEEC rate ${Y_{\rm{neec}}^{(\mathcal{E}L)}}$ given in Eq.~\eqref{eq:Yneec_el}. Starting from Eq.~\eqref{eq:Yneec-el-0} and employing the normalization condition of the spherical harmonics, $Y_{\rm{neec}}$ can be expressed directly in terms of the matrix elements provided in Eq.~\eqref{eq:App-neec-el-1}.
Using further the orthogonality properties of the Clebsch-Gordan coefficients leads to
%
\begin{align}
{Y_{\rm{neec}}^{(\mathcal{E}L)}} &= \frac{2\pi (2J_{\rm{d}}+1)}{2(2I_{\rm{i}}+1)(2J_{\rm{i}}+1)(2j_{\rm{d}}+1)}
\nonumber \\
&\qquad \times
\sum_{ M_{\rm{i}} m_{\rm{s}}} \sum_{M_{\rm{d}} m_{\rm{d}}} 
 \int d\Omega_{\bm{p}} \,
\big|\langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{en}}| I_{\rm{i}}M_{\rm{i}}, \bm{p} m_{\rm{s}} ,0 \rangle\big|^2 \rho_{\rm{i}} \nonumber \\
%&=
%\frac{2\pi }{2(2I_{\rm{i}}+1)(2J_{\rm{i}}+1)}\sum_{ M_{\rm{i}} \mu_{\rm{i}} m_{\rm{s}}} \sum_{M_{\rm{d}} \mu_{\rm{d}} m_{\rm{d}}}  \int d\Omega_{\bm{p}} \,
%\sum_{\kappa m} \sum_{\tilde{\kappa} \tilde{m}} \i^{l-\tilde{l}}
%\nonumber \\
%&\qquad \times 
% \e^{\i\Delta_{\kappa}-\i\Delta_{\tilde{\kappa}}} \sum_{m_l m_{\tilde{l}}} Y_{l m_l}^*(\theta_{\bm{p}},\varphi_{\bm{p}}) Y_{\tilde{l} m_{\tilde{l}}}(\theta_{\bm{p}},\varphi_{\bm{p}})
%C\big(l\ \frac{1}{2}\ j;m_l\ m_{\rm{s}} \ m\big) C\big(\tilde{l}\ \frac{1}{2}\ \tilde{j};m_{\tilde{l}}\ m_{\rm{s}} \ \tilde{m}\big)
% \nonumber \\
%&\qquad \times
%\langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{en}}| I_{\rm{i}}M_{\rm{i}}, \epsilon \kappa m ,0 \rangle 
%\langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{en}}| I_{\rm{i}}M_{\rm{i}}, \epsilon \tilde{\kappa} \tilde{m} ,0 \rangle^* \rho_{\rm{i}}
% \nonumber \\
&=
\frac{2\pi(2J_{\rm{d}}+1)}{2(2I_{\rm{i}}+1)(2J_{\rm{i}}+1)(2j_{\rm{d}}+1)} 
\nonumber \\
&\qquad \times
\sum_{ M_{\rm{i}} } \sum_{M_{\rm{d}} m_{\rm{d}}} \sum_{\kappa m} 
\big| \langle I_{\rm{d}}M_{\rm{d}}, n_{\rm{d}} \kappa_{\rm{d}} m_{\rm{d}} ,0 |\mathcalboondox{h}_{\rm{en}}| I_{\rm{i}}M_{\rm{i}}, \varepsilon \kappa m ,0 \rangle \big|^2  \rho_{\rm{i}} \nonumber \\
&=
\frac{4\pi^2\rho_{\rm{i}}}{(2L+1)^2}R_0^{-2(L+2)} \mathcal{B}(\mathcal{E}L,I_{\rm{i}}\to I_{\rm{d}}) \frac{2J_{\rm{d}}+1}{2J_{\rm{i}}+1}
\sum_\kappa
C\big(j_{\rm{d}}\ L\ j;\frac{1}{2}\ 0\ \frac{1}{2}\big)^2 \big|R^{(\mathcal{E})}_{L,\kappa_{\rm{d}},\kappa}\big|^2\ .
\end{align}


%\begin{equation}
%\sum_{m_1 m_2} C\big(j_1\ j_2\ J;m_1\ m_2\ M\big) C\big(j_1\ j_2\ J';m_1\ m_2\ M'\big) = \delta_{JJ'}\, \delta_{MM'}
%\end{equation}

%\begin{equation}
%\int d\Omega_{\bm{p}} \, Y_{l m_l}(\theta_{\bm{p}},\varphi_{\bm{p}}) Y_{l' m_l'}^*(\theta_{\bm{p}},\varphi_{\bm{p}}) = \delta_{ll'}\, \delta_{m_lm_l'}
%\end{equation}





%\begin{align}
%j = |\kappa|-\frac{1}{2}\ , \qquad\qquad
%l = \begin{cases} \,\kappa  & \quad\text{for $\kappa>0\ ,$} \\
%                   \,|\kappa|-1  & \quad\text{for $\kappa<0\ ,$} \end{cases} \qquad\qquad
%l' = \begin{cases} \,\kappa-1  & \quad\text{for $\kappa>0\ ,$} \\
%                   \,|\kappa|  & \quad\text{for $\kappa<0\ .$} \end{cases}
%\end{align}




%\begin{align}
%& \langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})\int_0^{\infty}\d r_{\rm{n}}r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}})|\bm{p}m_{\rm{s}}\rangle
%\nonumber \\
%& \qquad
%=  \sum_{\kappa m}\i^l e^{i\Delta_{\kappa}}\sum_{m_l}Y_{l m_l}^*(\theta_{\bm{p}},\varphi_{\bm{p}})
%C\big(l\ \frac{1}{2}\ j;m_l\ m_{\rm{s}} \ m\big) 
% \langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}}) \nonumber \\
%&\qquad\qquad \times
%\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) | \varepsilon\kappa m\rangle
%\end{align}

%\begin{align}
%&\langle n_{\rm{d}}\kappa_{\rm{d}}m_{\rm{d}}|Y^*_{LM}(\theta_{\rm{e}},\varphi_{\rm{e}})
%\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) | \varepsilon\kappa m\rangle
%\nonumber \\
%& \qquad
%= \frac{(-1)^{j-m+M}}{\sqrt{2 L+1}} C\big(j_{\rm{d}}\ j\ L;m_{\rm{d}}\ -\!m\ -\!M\big) \langle n_{\rm{d}}\kappa_{\rm{d}}\|Y^*_{L}(\theta_{\rm{e}},\varphi_{\rm{e}}) \nonumber \\
%&\qquad\qquad \times
%\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) \| \varepsilon\kappa \rangle
%\end{align}


%\begin{align}
%&\langle n_{\rm{d}}\kappa_{\rm{d}}\|Y^*_{L}(\theta_{\rm{e}},\varphi_{\rm{e}})
%\int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) \| \varepsilon\kappa \rangle \nonumber \\
%& \qquad
%= \int_0^{\infty}\d r_{\rm{e}}\, r_{\rm{e}}^2 \int_0^{\infty}\d r_{\rm{n}}\, r_{\rm{n}}^2\frac{r^L_{<}}{r^{L+1}_{>}}\delta(R_0-r_{\rm{n}}) \Bigg\{ g_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}}) g_{\varepsilon\kappa}(r_{\rm{e}}) \int \d \Omega_{\rm{e}}\, \Omega^*_{\kappa_{\rm{d}}}(\Omega_{\rm{e}})  Y^*_{L}(\Omega_{\rm{e}})  \nonumber \\
%& \qquad\qquad \times
%\Omega_{\kappa}(\Omega_{\rm{e}}) + f_{n_{\rm{d}}\kappa_{\rm{d}}}(r_{\rm{e}}) f_{\varepsilon\kappa}(r_{\rm{e}}) \int \d \Omega_{\rm{e}}\, \Omega^*_{-\kappa_{\rm{d}}}(\Omega_{\rm{e}})  Y^*_{L}(\Omega_{\rm{e}}) \Omega_{-\kappa}(\Omega_{\rm{e}}) \Bigg\} \nonumber \\
%& \qquad
