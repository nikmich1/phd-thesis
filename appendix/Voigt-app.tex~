% -----------------------------------------------------------------------------------------------------%

\subsubsection{\Large  Nuclear transition currents $\bm{j}_{\ell}$ for $\mathcal{M}1$ transitions}


Here, we calculate the nuclear transition currents [Eq.~\eqref{eq:NFS_trans-ampl-M1}]
%
\begin{align}
%\bm{j}_{\ell}^*(\bm{k}) &= \sqrt{3  f_{\rm{LM}}(\bm{k})}  \sum_{q=0,\pm1} \threejm{I _{\rm{g}}}{1}{I _{\rm{e}}}{-M _{\rm{g}}}{q}{M _{\rm{e}}} (-1)^{q+I _{\rm{g}}-M _{\rm{g}}} \left( \hat{\bm{k}} \times \bm{\varepsilon}_{-q}^* \right)\ , \nonumber \\
\bm{j}_{\ell}(\bm{k}) &= \sqrt{3  f_{\rm{LM}}(\bm{k})} \sum_{q=0,\pm1} \threejm{I _{\rm{g}}}{1}{I _{\rm{e}}}{-M _{\rm{g}}}{q}{M _{\rm{e}}} (-1)^{q+I _{\rm{g}}-M _{\rm{g}}} \left( \hat{\bm{k}} \times \bm{\varepsilon}_{-q} \right)\ 
\label{eq:App-trans-1}
\end{align}
%
for an explicit B-field geometry. We consider two scenarios: (I) $\bm{B} \parallel \bm{e}_z$, (II) $\bm{B} \parallel \bm{e}_x$. In both cases, the pulse propagation axis is fixed according to $\hat{\bm{k}} = \bm{e}_y$.

In the case of $\bm{B} \parallel \bm{e}_z$, the following spherical unit vectors are involved:
%
\begin{align}
\bm{\varepsilon}_0 &= \bm{e}_z\ , 
\nonumber \\ 
\bm{\varepsilon}_{\pm1} &= \mp \frac{1}{\sqrt{2}} \left( \bm{e}_x \pm \i\bm{e}_y \right)\ .
\end{align}
%
The cross product $\hat{\bm{k}} \times \bm{\varepsilon}_{-q}$ appearing in Eq.~\eqref{eq:App-trans-1} can take one of the following values
%
\begin{align}
\hat{\bm{k}} \times \bm{\varepsilon}_{0} &= \bm{e}_y \times \bm{e}_z = \bm{e}_x\ , \nonumber \\
\hat{\bm{k}} \times \bm{\varepsilon}_{\pm1} &= \mp \frac{1}{\sqrt{2}}\, \bm{e}_y \times \left( \bm{e}_x \pm \i\bm{e}_y \right) = \pm \frac{1}{\sqrt{2}}\, \bm{e}_z \ ,
\label{eq:App-trans-2}
\end{align}
%
where we made use of the orthogonality properties of the Cartesian unit vectors.
The further calculation of the transition currents $\bm{j}_{\ell,\mathrm{I}}$ is separately treated for the cases $q=0$ and $q=\pm1$.

%\begin{equation}
%\bm{\varepsilon}_{-q}^* = -\bm{\varepsilon}_{q}
%\end{equation}


\textbf{Case $q=0$:} 
According to the Wigner 3$j$-symbol occurring in Eq.~\eqref{eq:App-trans-1}, we have the following selection rule for the magnetic projection quantum numbers: $q-M _{\rm{g}}+M _{\rm{e}}=0$. Hence, $q=0$ exactly corresponds to even $\ell$ transitions with $\Delta M=0$. Applying Eq.~\eqref{eq:App-trans-2} and explicitly calculating the Clebsch-Gordan coefficients leads to
%
\begin{align}
%\bm{j}_{\ell=\pm2}(\bm{k})^* &= -\sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}} \bm{e}_{\sigma}\ , \nonumber \\
\bm{j}_{\ell=\pm2,\mathrm{I}}(\bm{k}) &= -\sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}} \bm{e}_{\sigma}\ .
\label{eq:App-trans-3}
\end{align}


\textbf{Case $q=\pm1$:} 
Analogously to the previous case, the Wigner 3$j$-symbol restricts the change in the magnetic projection quantum number to $\Delta M=\pm1$, corresponding to transitions of odd $\ell$. The transition currents $\bm{j}_{\ell,\mathrm{I}}$ evaluate to
%
\begin{align}
\bm{j}_{\ell=\pm1,\mathrm{I}}(\bm{k}) &= \pm \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\pi}\ , \nonumber \\
\bm{j}_{\ell=\pm3,\mathrm{I}}(\bm{k}) &= \mp \sqrt{\frac{3 f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\pi}\ .
\label{eq:App-trans-4}
\end{align}

%\begin{align}
%\bm{j}_{\ell=\pm3}(\bm{k})^* &= \mp \sqrt{\frac{3 f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\pi}\ , \nonumber \\
%\bm{j}_{\ell=\pm3}(\bm{k}) &= \mp \sqrt{\frac{3 f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\pi}\ ,
%\end{align}

Scenario (II) with $\bm{B} \parallel \bm{e}_x$ can be treated analogously. Redefining the spherical unit vectors according to
%
\begin{align}
\bm{\varepsilon}_0 &= \bm{e}_x\ , 
\nonumber \\ 
\bm{\varepsilon}_{\pm1} &= \mp \frac{1}{\sqrt{2}} \left( -\bm{e}_z \pm \i\bm{e}_y \right)\ ,
\end{align}
%
and following the same steps as before, leads to the following expressions for the transition currents $\bm{j}_{\ell,\mathrm{II}}$,
%
\begin{align}
\bm{j}_{\ell=\pm1,\mathrm{II}}(\bm{k}) &= \pm \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\sigma}\ , \nonumber \\
\bm{j}_{\ell=\pm2,\mathrm{II}}(\bm{k}) &= \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}} \bm{e}_{\pi}\ , \nonumber \\
\bm{j}_{\ell=\pm3,\mathrm{II}}(\bm{k}) &= \mp \sqrt{\frac{3 f_{\rm{LM}}(\bm{k})}{8}} \bm{e}_{\sigma}\ .
\label{eq:App-trans-5}
\end{align}

% -----------------------------------------------------------------------------------------------------%

\subsubsection{\Large  Amplitude $\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{I}}$ \& first order solution}


The amplitude $\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{I}}$ is defined in Eq.~\eqref{eq:amplitude-I}. Using the results in Eqs.~\eqref{eq:App-trans-3} and \eqref{eq:App-trans-4}, we obtain
%
\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell=\pm1,\mathrm{I}}(\bm{k}) &= \frac{f_{\rm{LM}}(\bm{k})}{8}\, \bm{e}_{\pi} \left( \bm{e}_{\pi} \cdot \bm{e} _{\rm{p}} \right)\ , \nonumber \\
\bm{\mathcal{A}}^{(1)}_{\ell=\pm2,\mathrm{I}}(\bm{k}) &= \frac{f_{\rm{LM}}(\bm{k})}{2}\, \bm{e}_{\sigma} \left( \bm{e}_{\sigma} \cdot \bm{e} _{\rm{p}} \right)\ , \nonumber \\
\bm{\mathcal{A}}^{(1)}_{\ell=\pm3,\mathrm{I}}(\bm{k}) &= \frac{3 f_{\rm{LM}}(\bm{k})}{8}\, \bm{e}_{\pi} \left( \bm{e}_{\pi} \cdot \bm{e} _{\rm{p}} \right)\ ,
\label{eq:App-A-I-1}
\end{align}
%
where $\bm{e}_{\rm{p}}$ denotes the polarization of the incident SR pulse. In order to obtain the first order solution $\bm{E}^{(1)}$ [Eq.~\eqref{eq:field-I}], the occurring summation over $\ell$ needs to be performed explicitly. With the help of Eqs.~\eqref{eq:App-A-I-1}, we obtain for $\bm{e}_{\rm{p}} = \bm{e}_{\sigma}$ the following expression
%
\begin{align}
\bm{E}^{(1)}(\xi,\tau) &= 
-\xi \sum_{\ell=\pm2} \bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{I}}(\bm{k}) \, \e^{-\i \Omega_{\ell} \tau - \tau/2} \nonumber \\
&=
-\xi\, \Big\{ \bm{\mathcal{A}}^{(1)}_{\ell=-2,\mathrm{I}}(\bm{k}) \, \e^{\i \Omega_{2} \tau - \tau/2} + \bm{\mathcal{A}}^{(1)}_{\ell=2,\mathrm{I}}(\bm{k}) \, \e^{-\i \Omega_{2} \tau - \tau/2} \Big\} \nonumber \\
&= -\xi\, \frac{f_{\rm{LM}}(\bm{k})}{2}\, \Big\{ \e^{\i \Omega_{2} \tau} + \e^{-\i \Omega_{2} \tau }   \Big\}\, \e^{- \tau/2} \bm{e}_{\sigma} \nonumber \\
&= -\xi\, f_{\rm{LM}}(\bm{k})  \cos(\Omega_{2} \tau) \e^{- \tau/2} \bm{e}_{\sigma} \ .
\end{align}
%
The case of $\bm{e}_{\rm{p}} = \bm{e}_{\pi}$ can be treated analogously, leading to
%
\begin{align}
\bm{E}^{(1)}(\xi,\tau) &= 
-\xi \sum_{\ell=\pm1,\pm3} \bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{I}}(\bm{k}) \, \e^{-\i \Omega_{\ell} \tau - \tau/2} \nonumber \\
%&=
%-\xi\, \Big\{ \bm{\mathcal{A}}^{(1)}_{\ell=-1,\mathrm{I}}(\bm{k}) \, \e^{\i \Omega_{1} \tau - \tau/2} + \bm{\mathcal{A}}^{(1)}_{\ell=1,\mathrm{I}}(\bm{k}) \, \e^{-\i \Omega_{1} \tau - \tau/2} + \bm{\mathcal{A}}^{(1)}_{\ell=-3,\mathrm{I}}(\bm{k}) \, \e^{\i \Omega_{3} \tau - \tau/2} + \bm{\mathcal{A}}^{(1)}_{\ell=3,\mathrm{I}}(\bm{k}) \, \e^{-\i \Omega_{3} \tau - \tau/2}\Big\} \nonumber \\
&=
 -\xi\, \frac{f_{\rm{LM}}(\bm{k})}{8}\, \Big\{ \e^{\i \Omega_{1} \tau} + \e^{-\i \Omega_{1} \tau } + 3  \e^{\i \Omega_{3} \tau} + 3 \e^{-\i \Omega_{3} \tau } \Big\}\, \e^{- \tau/2}  \bm{e}_{\pi}  \nonumber \\
&=
 -\xi\, \frac{f_{\rm{LM}}(\bm{k})}{4}  \Big\{ \cos(\Omega_{1} \tau) + 3 \cos(\Omega_{3} \tau) \Big\} \e^{- \tau/2} \bm{e}_{\pi} \ .
\end{align}
%


% -----------------------------------------------------------------------------------------------------%

\subsubsection{\Large  Wigner's small $d$-matrices for a $90^{\circ}$-Voigt rotation}



