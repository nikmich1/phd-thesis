\subsubsection{\Large  Amplitude $\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{II}}$ for incident $\sigma$-polarized x-rays}

The time-independent amplitude $\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{II}}$ for $\bm{e}_{\rm{p}} = \bm{e}_{\sigma}$ is given by [compare Eq.~\eqref{eq:amplitude-II-simplify}]
%
\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{II}}(\bm{k}) 
&= 
\bm{j}_{\ell,\mathrm{II}}(\bm{k}) \sum_{\ell'} \e^{-\i \Omega_{\ell'} \tau_0} d_{M _{\rm{g}}M _{\rm{g}}'}^{I _{\rm{g}}}\left(\frac{\pi}{2}\right) d_{M _{\rm{e}}M _{\rm{e}}'}^{I _{\rm{e}}}\left(\frac{\pi}{2}\right)  \left( \bm{j}_{\ell',\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right) \ .
\end{align}
%
In the following, we will explicitly calculate these amplitudes by using Table \ref{table:d-matrix} for the $d$-matrices and Eqs.~\eqref{eq:App-trans-3}, \eqref{eq:App-trans-4} and \eqref{eq:App-trans-5} for the nuclear transition currents $\bm{j}_{\ell,\mathrm{II}}$ and $\bm{j}^*_{\ell',\mathrm{I}}$.

\noindent
Case $\ell=\pm1$:
%
\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell=\pm1,\mathrm{II}}(\bm{k}) 
&= 
\mp \bm{j}_{\ell=\pm1,\mathrm{II}}(\bm{k}) \, \Bigg\{ 
  \frac{1}{4}  \e^{\i \Omega_{2} \tau_0}  \left( \bm{j}_{\ell'=-2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
+ \frac{1}{4}  \e^{-\i \Omega_{2} \tau_0}   \left( \bm{j}_{\ell'=2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
\Bigg\} \nonumber \\
&= 
\pm \bm{j}_{\ell=\pm1,\mathrm{II}}(\bm{k})\, \frac{1}{4} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \Bigg\{ 
 \e^{\i \Omega_{2} \tau_0} 
+ \e^{-\i \Omega_{2} \tau_0} 
\Bigg\} \nonumber \\
&= 
\pm  \bm{j}_{\ell=\pm1,\mathrm{II}}(\bm{k})\, \frac{1}{2} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \cos(\Omega_{2} \tau_0) \nonumber \\
&= 
 \frac{f_{\rm{LM}}(\bm{k})}{8} \cos(\Omega_{2} \tau_0) \bm{e}_{\sigma}\ .
\end{align}
%

\noindent
Case $\ell=\pm2$:

\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell=\pm2,\mathrm{II}}(\bm{k}) 
&= 
\bm{j}_{\ell=\pm2,\mathrm{II}}(\bm{k}) \, \Bigg\{ 
\pm  \frac{1}{4}  \e^{\i \Omega_{2} \tau_0}  \left( \bm{j}_{\ell'=-2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
\mp  \frac{1}{4}  \e^{-\i \Omega_{2} \tau_0}   \left( \bm{j}_{\ell'=2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
\Bigg\} \nonumber \\
&= 
\bm{j}_{\ell=\pm2,\mathrm{II}}(\bm{k})\, \frac{1}{4} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \Bigg\{ 
\mp  \e^{\i \Omega_{2} \tau_0} 
\pm  \e^{-\i \Omega_{2} \tau_0} 
\Bigg\} \nonumber \\
&= 
\mp \i \, \bm{j}_{\ell=\pm2,\mathrm{II}}(\bm{k})\, \frac{1}{2} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \sin(\Omega_{2} \tau_0) \nonumber \\
&= 
\mp \i \, \frac{f_{\rm{LM}}(\bm{k})}{4} \sin(\Omega_{2} \tau_0) \bm{e}_{\pi}\ .
\end{align}
%

\noindent
Case $\ell=\pm3$:
%
\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell=\pm3,\mathrm{II}}(\bm{k}) 
&= 
\pm \bm{j}_{\ell=\pm3,\mathrm{II}}(\bm{k}) \, \Bigg\{ 
  \frac{\sqrt{3}}{4}  \e^{\i \Omega_{2} \tau_0}  \left( \bm{j}_{\ell'=-2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
+ \frac{\sqrt{3}}{4}  \e^{-\i \Omega_{2} \tau_0}   \left( \bm{j}_{\ell'=2,\mathrm{I}}^{*}(\bm{k}) \cdot \bm{e} _{\sigma} \right)
\Bigg\} \nonumber \\
&= 
\mp \bm{j}_{\ell=\pm3,\mathrm{II}}(\bm{k})\, \frac{\sqrt{3}}{4} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \Bigg\{ 
 \e^{\i \Omega_{2} \tau_0} 
+ \e^{-\i \Omega_{2} \tau_0} 
\Bigg\} \nonumber \\
&= 
\mp  \bm{j}_{\ell=\pm3,\mathrm{II}}(\bm{k})\, \frac{\sqrt{3}}{4} \sqrt{\frac{f_{\rm{LM}}(\bm{k})}{2}}\, \cos(\Omega_{2} \tau_0) \nonumber \\
&= 
 \frac{3 f_{\rm{LM}}(\bm{k})}{8} \cos(\Omega_{2} \tau_0) \bm{e}_{\sigma}\ .
\end{align}
%



% -----------------------------------------------------------------------------------------------------%

\subsubsection{\Large  Amplitude $\bm{\mathcal{A}}^{(1)}_{\ell,\mathrm{II}}$ for incident $\pi$-polarized x-rays}


The case of incident $\pi$-polarized x-rays can be solved analogously to the previous case. Taking $\bm{e}_{\rm{p}}=\bm{e}_{\pi}$ and following the same lines as before, we obtain
%
\begin{align}
\bm{\mathcal{A}}^{(1)}_{\ell=\pm1,\mathrm{II}}(\bm{k}) 
&= \pm \i\, \frac{f_{\rm{LM}}(\bm{k})}{16} \Big\{ \sin(\Omega_{1} \tau_0) + 3 \sin(\Omega_{3} \tau_0) \Big\}\, \bm{e}_{\sigma}
\nonumber \\
\bm{\mathcal{A}}^{(1)}_{\ell=\pm2,\mathrm{II}}(\bm{k}) 
&=  \frac{f_{\rm{LM}}(\bm{k})}{8} \Big\{ \cos(\Omega_{1} \tau_0) + 3 \cos(\Omega_{3} \tau_0) \Big\}\, \bm{e}_{\pi}
\nonumber \\
\bm{\mathcal{A}}^{(1)}_{\ell=\pm3,\mathrm{II}}(\bm{k}) 
&= \pm \i\, \frac{3 f_{\rm{LM}}(\bm{k})}{16} \Big\{ \sin(\Omega_{1} \tau_0) - \sin(\Omega_{3} \tau_0) \Big\}\, \bm{e}_{\sigma}\ .
\end{align}









%\begin{equation}
%\sum_{M _{\rm{e}},M _{\rm{g}}} \threejm{I _{\rm{g}}}{1}{I _{\rm{e}}}{-M _{\rm{g}}}{q'}{M _{\rm{e}}} \threejm{I _{\rm{g}}}{1}{I _{\rm{e}}}{-M _{\rm{g}}}{q}{M _{\rm{e}}} = \frac{1}{3} \delta_{q',q}
%\end{equation}

%\begin{equation}
%\sum_{q} \left( \hat{\bm{k}} \times \bm{\varepsilon}_{-q} \right) \left( \hat{\bm{k}} \times \bm{\varepsilon}_{-q}^* \right) = 1
%\end{equation}
